{
  "openapi": "3.0.0",
  "info": {
    "title": "NodeLabs API",
    "version": "2.0.0",
    "description": "A production-ready, fully modular Node.js Express boilerplate.",
    "license": {
      "name": "MIT",
      "url": "https://spdx.org/licenses/MIT.html"
    },
    "contact": {
      "name": "Development Team",
      "url": "https://example.com",
      "email": "info@example.com"
    }
  },
  "servers": [
    {
      "url": "https://case.nodelabs.dev/api",
      "description": "Development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "FinancialSummary": {
        "type": "object",
        "properties": {
          "totalBalance": {
            "type": "object",
            "properties": {
              "amount": {
                "type": "number",
                "example": 125750.5
              },
              "currency": {
                "type": "string",
                "example": "TRY"
              },
              "change": {
                "type": "object",
                "properties": {
                  "percentage": {
                    "type": "number",
                    "example": 12.5
                  },
                  "trend": {
                    "type": "string",
                    "enum": ["up", "down", "stable"],
                    "example": "up"
                  }
                }
              }
            }
          },
          "totalExpense": {
            "type": "object",
            "properties": {
              "amount": {
                "type": "number",
                "example": 45320.75
              },
              "currency": {
                "type": "string",
                "example": "TRY"
              },
              "change": {
                "type": "object",
                "properties": {
                  "percentage": {
                    "type": "number",
                    "example": -8.3
                  },
                  "trend": {
                    "type": "string",
                    "example": "down"
                  }
                }
              }
            }
          },
          "totalSavings": {
            "type": "object",
            "properties": {
              "amount": {
                "type": "number",
                "example": 80429.75
              },
              "currency": {
                "type": "string",
                "example": "TRY"
              },
              "change": {
                "type": "object",
                "properties": {
                  "percentage": {
                    "type": "number",
                    "example": 15.2
                  },
                  "trend": {
                    "type": "string",
                    "example": "up"
                  }
                }
              }
            }
          },
          "lastUpdated": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "WorkingCapital": {
        "type": "object",
        "properties": {
          "period": {
            "type": "string",
            "example": "last6Months"
          },
          "currency": {
            "type": "string",
            "example": "TRY"
          },
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "month": {
                  "type": "string",
                  "example": "Ocak"
                },
                "income": {
                  "type": "number",
                  "example": 65000
                },
                "expense": {
                  "type": "number",
                  "example": 42000
                },
                "net": {
                  "type": "number",
                  "example": 23000
                }
              }
            }
          },
          "summary": {
            "type": "object",
            "properties": {
              "totalIncome": {
                "type": "number",
                "example": 390000
              },
              "totalExpense": {
                "type": "number",
                "example": 252000
              },
              "netBalance": {
                "type": "number",
                "example": 138000
              }
            }
          }
        }
      },
      "Wallet": {
        "type": "object",
        "properties": {
          "cards": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "example": "card_001"
                },
                "name": {
                  "type": "string",
                  "example": "Maglo Gold Card"
                },
                "type": {
                  "type": "string",
                  "enum": ["credit", "debit"],
                  "example": "credit"
                },
                "cardNumber": {
                  "type": "string",
                  "example": "5495 7381 3759 2321",
                  "description": "Full card number or masked number"
                },
                "bank": {
                  "type": "string",
                  "example": "Maglo | Universal Bank",
                  "description": "Bank name with brand"
                },
                "network": {
                  "type": "string",
                  "enum": ["Visa", "Mastercard", "American Express"],
                  "example": "Visa"
                },
                "expiryMonth": {
                  "type": "integer",
                  "example": 12
                },
                "expiryYear": {
                  "type": "integer",
                  "example": 2027
                },
                "color": {
                  "type": "string",
                  "example": "#000000",
                  "description": "Card color in hex format"
                },
                "isDefault": {
                  "type": "boolean",
                  "example": true
                }
              }
            }
          }
        }
      },
      "RecentTransactions": {
        "type": "object",
        "properties": {
          "transactions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "example": "trx_001"
                },
                "name": {
                  "type": "string",
                  "description": "Transaction name (product/service name)",
                  "example": "iPhone 13 Pro MAX"
                },
                "business": {
                  "type": "string",
                  "description": "Business/Company name",
                  "example": "Apple Inc."
                },
                "image": {
                  "type": "string",
                  "description": "Business/Company logo URL",
                  "example": "https://i.ibb.co/Nd4vxyg0/Turk-Telekom-Symbol.png"
                },
                "type": {
                  "type": "string",
                  "description": "Transaction category",
                  "example": "Mobile"
                },
                "amount": {
                  "type": "number",
                  "description": "Transaction amount (positive for income, negative for expense)",
                  "example": -420.84
                },
                "currency": {
                  "type": "string",
                  "example": "TRY"
                },
                "date": {
                  "type": "string",
                  "format": "date-time",
                  "example": "2025-10-06T10:30:00.000Z"
                },
                "status": {
                  "type": "string",
                  "enum": ["completed", "pending", "failed"],
                  "example": "completed"
                }
              }
            }
          },
          "summary": {
            "type": "object",
            "properties": {
              "totalIncome": {
                "type": "number",
                "example": 45000
              },
              "totalExpense": {
                "type": "number",
                "example": 12500
              },
              "count": {
                "type": "number",
                "example": 20
              }
            }
          }
        }
      },
      "ScheduledTransfers": {
        "type": "object",
        "properties": {
          "transfers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "example": "sch_001"
                },
                "name": {
                  "type": "string",
                  "description": "Recipient's full name",
                  "example": "Saleh Ahmed"
                },
                "image": {
                  "type": "string",
                  "format": "url",
                  "description": "URL of the recipient's avatar/profile picture (generated from UI Avatars)",
                  "example": "https://ui-avatars.com/api/?name=Saleh+Ahmed&background=random&size=100"
                },
                "date": {
                  "type": "string",
                  "format": "date-time",
                  "description": "Scheduled date and time of the transfer",
                  "example": "2022-04-28T11:00:00Z"
                },
                "amount": {
                  "type": "number",
                  "description": "Transfer amount (negative for outgoing)",
                  "example": -435
                },
                "currency": {
                  "type": "string",
                  "description": "Currency symbol or code",
                  "example": "$"
                },
                "status": {
                  "type": "string",
                  "enum": ["scheduled", "processing", "completed", "cancelled"],
                  "description": "Current status of the scheduled transfer",
                  "example": "scheduled"
                }
              }
            }
          },
          "summary": {
            "type": "object",
            "properties": {
              "totalScheduledAmount": {
                "type": "number",
                "example": -2056
              },
              "count": {
                "type": "integer",
                "example": 5
              }
            }
          }
        }
      },
      "RegisterInput": {
        "type": "object",
        "required": ["fullName", "email", "password"],
        "properties": {
          "fullName": {
            "type": "string",
            "description": "The user's full name.",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "The user's email address.",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "description": "The user's password (must be at least 8 characters, with uppercase, lowercase, and a number).",
            "example": "Pa$w0rd123"
          }
        },
        "description": "Note: The role field is NOT included in registration. All new users are automatically assigned the \"user\" role."
      },
      "LoginInput": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "The user's email address.",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "description": "The user's password.",
            "example": "Pa$w0rd123"
          }
        }
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The user's unique identifier.",
            "example": "60d0fe4f5311236168a109ca"
          },
          "fullName": {
            "type": "string",
            "description": "The user's full name.",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "The user's email address.",
            "example": "user@example.com"
          },
          "role": {
            "type": "string",
            "description": "The user's role (automatically set to \"user\" on registration, not sent in request).",
            "example": "user",
            "enum": ["user", "admin"]
          },
          "isActive": {
            "type": "boolean",
            "description": "Whether the user's account is active.",
            "example": true
          },
          "lastLoginAt": {
            "type": "string",
            "format": "date-time",
            "description": "The date and time of the user's last login.",
            "example": "2025-10-06T10:30:00.000Z"
          },
          "lastLoginIP": {
            "type": "string",
            "description": "The IP address of the user's last login.",
            "example": "192.168.1.1"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "The date the user was created."
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "The date the user was last updated."
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/financial/summary": {
      "get": {
        "tags": ["Financial"],
        "summary": "Get financial summary",
        "description": "Returns total balance, total expenses, and total savings with change percentages.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Financial summary retrieved successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Financial summary retrieved successfully."
                    },
                    "data": {
                      "$ref": "#/components/schemas/FinancialSummary"
                    }
                  }
                },
                "examples": {
                  "success": {
                    "summary": "Successful Response",
                    "value": {
                      "success": true,
                      "message": "Financial summary retrieved successfully.",
                      "data": {
                        "totalBalance": {
                          "amount": 125750.5,
                          "currency": "TRY",
                          "change": {
                            "percentage": 12.5,
                            "trend": "up"
                          }
                        },
                        "totalExpense": {
                          "amount": 45320.75,
                          "currency": "TRY",
                          "change": {
                            "percentage": -8.3,
                            "trend": "down"
                          }
                        },
                        "totalSavings": {
                          "amount": 80429.75,
                          "currency": "TRY",
                          "change": {
                            "percentage": 15.2,
                            "trend": "up"
                          }
                        },
                        "lastUpdated": "2025-10-06T10:30:00.000Z"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Missing or invalid token.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "example": "Unauthorized"
                    },
                    "message": {
                      "type": "string",
                      "example": "An access token is required for authentication."
                    },
                    "code": {
                      "type": "string",
                      "example": "TOKEN_MISSING"
                    }
                  }
                },
                "examples": {
                  "missingToken": {
                    "summary": "Missing Token",
                    "value": {
                      "success": false,
                      "error": "Unauthorized",
                      "message": "An access token is required for authentication.",
                      "code": "TOKEN_MISSING"
                    }
                  },
                  "expiredToken": {
                    "summary": "Expired Token",
                    "value": {
                      "success": false,
                      "error": "Unauthorized",
                      "message": "Your session has expired. Please log in again.",
                      "code": "TOKEN_EXPIRED"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "example": "InternalServerError"
                    },
                    "message": {
                      "type": "string",
                      "example": "An unexpected error occurred on the server."
                    },
                    "code": {
                      "type": "string",
                      "example": "UNEXPECTED_ERROR"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
